<!-- Content Row -->
<div class="row">

	<div class="container">

		<div class="card o-hidden border-0 shadow-lg my-5">
			<div class="card-body p-0">
				<!-- Nested Row within Card Body -->
				<div class="row">
					<div class="col-lg-2 "></div> @* d-lg-block bg-register-image"></div>*@
					<div class="col-lg-7">
						<div class="p-5">
							<div class="text-center"><h1 class="h4 text-gray-900 mb-4">Register</h1></div>
								<div asp-validation-summary="ModelOnly" class="text-danger"></div>
							<form class="user" id="registerForm" asp-route-returnUrl="login" method="post">
								<hr />
								<div asp-validation-summary="ModelOnly" class="text-danger"></div>
								<div class="form-group row">
									<div class="col-sm-6 mb-3 mb-sm-0">
										<input type="text" class="form-control form-control-user" placeholder="First Name" asp-for="Input.FirstName" autocomplete="username" aria-required="true">
										<span asp-validation-for="Input.FirstName" class="text-danger"></span>
									</div>
									<div class="col-sm-6">
										<input type="text" class="form-control form-control-user" placeholder="Last Name" asp-for="Input.LastName" autocomplete="username" aria-required="true">
										<span asp-validation-for="Input.LastName" class="text-danger"></span>
									</div>
								</div>

								<div class="form-group">
									<input asp-for="Input.Email" class="form-control form-control-user" autocomplete="Email" aria-required="true" placeholder="Email Address">
									@*<input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
										<label asp-for="Input.Email"></label>*@
									<span asp-validation-for="Input.Email" class="text-danger"></span>
								</div>

								<div class="form-group row">
									<div class="col-sm-6 mb-3 mb-sm-0">
										<input asp-for="Input.Password" autocomplete="new-password" aria-required="true" class="form-control form-control-user"  placeholder="Password">
										@*<input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
										<label asp-for="Input.Password"></label>*@
										<span asp-validation-for="Input.Password" class="text-danger"></span>
									</div>
									<div class="col-sm-6">
										<input  asp-for="Input.ConfirmPassword" class="form-control form-control-user" autocomplete="new-password" aria-required="true"  placeholder="Confirm Password">
											@*<input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
											<label asp-for="Input.ConfirmPassword"></label>*@
											<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
									</div>
								</div>
@*
							<a  id="registerSubmit" type="submit" class="btn btn-primary btn-user btn-block">Register</a>*@
								<button id="registerSubmit" type="submit" class="btn btn-primary btn-user btn-block form-user">Register</button>

								</form>

								<div class="col-md-12"> @*col-md-offset-2*@
									<section>								
									@{
									if ((Model.ExternalLogins?.Count ?? 0) == 0)
									{
									<div>
								
									</div>
									}
									else
									{
									<form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
									<div>
									<p>
									@foreach (var provider in Model.ExternalLogins)
									{
											<hr>
											@if(provider.Name=="Google")	
											{
												<button type="submit" class="btn btn-google btn-user btn-block form-user" style="font-size: .8rem; border-radius: 10rem; padding: 0.75rem 1rem;" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
											}
											@if(provider.Name=="Facebook")	
											{
												<button type="submit" class="btn btn-facebook btn-user btn-block form-user" style="font-size: .8rem; border-radius: 10rem; padding: 0.75rem 1rem;" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
											}
								//<a href="index.html" class="btn btn-facebook btn-user btn-block"><i class="fab fa-facebook-f fa-fw"></i> Register with Facebook</a>
								//<button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
										
									}
									</p>
									</div>
									</form>
									}
									}
							</section>
								</div>
								


							
						
							<hr>
							<div class="text-center">
								<a class="small" href="forgot-password.html">Forgot Password?</a>
							</div>
							<div class="text-center">
								<a class="small" href="login.html">Already have an account? Login!</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

	</div>
</div>



@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
